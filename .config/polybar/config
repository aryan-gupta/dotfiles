[colors]
background = ${env:COLOR_BACKGND_N}
foreground = ${env:COLOR_FOREGND_N}
light = ${env:COLOR_ACNTLGT_N}
dark = ${env:COLOR_ACNTDRK_N}
alert = ${env:COLOR_WARNING_H}

[global/wm]
margin-top = -30
; margin-bottom = 100

[bar/bottom]
wm-restack = bspwm

height = 30
offset-y = 10
bottom = true
padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

background = ${colors.background}
foreground = ${colors.foreground}
; border-size = 1
; border-color = #6698FF

font-0 = monospace:pixelsize=11;2
font-1 = unifont:fontformat=truetype:size=20:antialias=false;0
font-2 = siji:pixelsize=20;1

[bar/wm]
inherit = bar/bottom
line-size = 2
modules-center = bspwm

[bar/ws]
monitor = ${env:PRIMARY_MONITOR:DisplayPort-0}
inherit = bar/wm
width = 260

[bar/ws-tv]
monitor = ${env:TV_MONITOR:HDMI-3}
inherit = bar/wm
width = 70
offset-x = 100%:-70

[bar/ws-flags]
monitor = ${env:PRIMARY_MONITOR:DisplayPort-0}
inherit = bar/bottom
line-size = 2
width = 65
offset-x = 280
module-margin = 1

modules-left = bspwmflags winflags

[bar/time]
monitor = ${env:PRIMARY_MONITOR:DisplayPort-0}
inherit = bar/bottom

width = 180
offset-x = 32%:-180

modules-left = date
modules-right = time

[bar/music]
monitor = ${env:PRIMARY_MONITOR:DisplayPort-0}
inherit = bar/bottom

width = 550
offset-x = 50%:-275

; modules-left = mpds
; modules-right = mpdc
